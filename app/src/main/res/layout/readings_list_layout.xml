<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Temprature :"
        android:id="@+id/txtTemp"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:textColor="#ff000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Humidity :"
        android:id="@+id/textView"
        android:layout_below="@+id/txtTemp"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:textColor="#ff000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Atmospheric pressure :"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtTempText"
        android:layout_alignBottom="@+id/txtTemp"
        android:layout_toRightOf="@+id/txtTemp"
        android:layout_toEndOf="@+id/txtTemp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textColor="#ff393939"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtHumidityText"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/txtTempText"
        android:layout_alignStart="@+id/txtTempText"
        android:textColor="#ff393939"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtPressureTxt"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/txtHumidityText"
        android:layout_alignStart="@+id/txtHumidityText"
        android:textColor="#ff393939"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location :"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textColor="#ff000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtLocationText"
        android:layout_above="@+id/txtTemp"
        android:layout_alignLeft="@+id/txtTempText"
        android:layout_alignStart="@+id/txtTempText"
        android:textColor="#ff393939"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TimeStamp :"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:textColor="#ff000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtTimeStampText"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/txtPressureTxt"
        android:textColor="#ff393939"/>

</RelativeLayout>